<Window x:Class="MapEditor.NewMapMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapEditor"
        mc:Ignorable="d"
        Title="NewMapMenu" Height="198.776" Width="351.02">
    <Grid Height="128" VerticalAlignment="Top" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30.5"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="62*"/>
            <ColumnDefinition Width="233*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Width" VerticalAlignment="Center"/>
        <TextBox x:Name="map_width" Grid.Column="1" Margin="4"/>

        <TextBlock Text="Height" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="map_height" Grid.Row="1" Grid.Column="1" Margin="4"/>

        <Button x:Name="ok_button" Grid.Row="2" Grid.Column="1" Content="OK" Margin="8"/>

    </Grid>
</Window>
